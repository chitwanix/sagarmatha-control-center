+                                                       NULL,
+                                                       "org.gnome.DisplayManager",
+                                                       "/org/gnome/DisplayManager/Manager",
+                                                       "org.gnome.DisplayManager.Manager",
+                                                       NULL, NULL);
+
+                if (proxy == NULL)
+                        return FALSE;
+
+                owner_name = g_dbus_proxy_get_name_owner (proxy);
+
+                g_object_unref (proxy);
+                g_free (owner_name);
+
+                _is_gdm_running = (owner_name != NULL) ? 1 : 0;
+        }
+
+        return _is_gdm_running;
